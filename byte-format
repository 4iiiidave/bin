#!/usr/bin/env swift

import Foundation
import Cocoa

let stderr = FileHandle.standardError
let arguments = Array(CommandLine.arguments[1 ..< CommandLine.arguments.count])

if arguments.count == 0
{
    stderr.write("ðŸš«  Usage: byte-format [number]\n".data(using: String.Encoding.utf8)!)
    exit(1)
}

for arg in arguments
{
    guard let intValue : Int64 = Int64(arg) else {
      stderr.write("ðŸš«  Invalid argument \(arg)\n".data(using: String.Encoding.utf8)!)
      continue
    }
    print(ByteCountFormatter.string(fromByteCount: intValue, countStyle: .file))
}
