#!/bin/sh

# Export compressed copy of JPEG(s) using guetzli
# https://github.com/google/guetzli

cmd=(`which guetzli`)

guetzlify()
{
  $cmd "$1" "$2"
  out=$?

  # echo file creation & compression info
  if [ $out -eq 0 ];
  then
    originalSize=`stat -f%z "$1"`
    compressedSize=`stat -f%z "$2"`
    output=`php -r "echo('(' . (100 - round(100 * $compressedSize/$originalSize)) . '% compressed)');"`
    echo "$1 â†’ $2 $output"
  fi
}

# ensure guetzli is installed
if [[ $cmd == "" ]]
then
   >&2 echo "ðŸš«  Install guetzli: https://github.com/google/guetzli"
   exit 1
fi


# if no arguments specified...
if [[ $1 == "" ]]
then
   >&2 echo "ðŸš«  Usage: guetzler [path(s)]"
   exit 1
fi

# loop through all arguments
for arg in $@;
do

  # if a jpeg, export as `guetzler-{filename}.jpg`
  if [ -f "$arg" ];
  then
    f=`basename $arg`
    dir=`dirname $arg`

    guetzlify $arg $dir/guetzli-$f

  # if a directory, create sub-directory `guetzli` and export images there
  elif [ -d "$arg" ];
  then
    format=*.jpg
    for i in $arg/$format;
    do
       outdir="$arg/guetzli"

       if [ ! -d "$outdir" ];
       then
         mkdir $outdir
       fi

       f=`basename "$i"`;
       guetzlify "$i" "$outdir/$f"

    done
  else
    >&2 echo "ðŸš«  Invalid path \"$1\""
  fi

done
