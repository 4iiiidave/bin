#!/usr/bin/env swift

/*
https://github.com/davidfmiller/bin

Echo contents of a text-clipping file to stdout
*/

import Foundation
import Cocoa
import Darwin

let stderr = FileHandle.standardError
let stdout = FileHandle.standardOutput

let os = ProcessInfo().operatingSystemVersion
if os.minorVersion < 12 {
  stderr.write("ðŸš«  Unable to read textClipping on macOS versions < 10.12\n".data(using: String.Encoding.utf8)!);
  exit(0)
}

let ARGUMENTS = Array(CommandLine.arguments[1 ..< CommandLine.arguments.count])

if ARGUMENTS.count < 1 {
  stderr.write("ðŸš«  Usage: > text-clipping {path}\n".data(using: String.Encoding.utf8)!)
  exit(0)
}

for path in ARGUMENTS {

  if let fileURL = URL(string: path) {

    if fileURL.pathExtension != "textClipping" {
      stderr.write("ðŸš«  \(path) is not a text clipping\n".data(using: String.Encoding.utf8)!)
      continue
    }

    let config : NSDictionary? = NSDictionary(contentsOfFile:path)
    let dict : NSDictionary? = (config!["UTI-Data"] as! NSDictionary)
    if dict != nil {
      print("\(dict!["public.utf8-plain-text"]!)")
    }
  
  } else {
    stderr.write("ðŸš«  \(path) not found\n".data(using: String.Encoding.utf8)!)
  }
}